<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbarwrapper.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbarwrapper.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:src="@android:drawable/ic_dialog_info" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jupyter Notebooks + Termux Terminal v1.0"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notebook_viewer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ““ Notebook Viewer"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notebook_editor"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âœï¸ Notebook Editor"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_terminal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ’» Terminal"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âš™ï¸ Settings"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_shortcuts"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âŒ¨ï¸ Keyboard Shortcuts"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="â„¹ï¸ About"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2025 Jupytermux - Free & Open Source"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
